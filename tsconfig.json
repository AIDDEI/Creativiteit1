{
    "compilerOptions": {
        "target": "es6",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictPropertyInitialization": false,
        "module": "ES6",
        "sourceMap": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "lib": [
            "es6",
            "dom"
        ],
        "noUnusedLocals": true, //Deze voor canvas
    },
    "include": [
        "./src/**/*",
        "globals.d.ts"
    ]
}
